		status = "okay";
	};
};

&i2c4 {
	status = "okay";
};

&i2c5 {
	status = "okay";

	swmbx0: swmbx0@38 {
		compatible = "aspeed,swmbx-dev";
		reg = <0x38>;
		size = <256>;
		port = <0>;
		status = "okay";
	};
